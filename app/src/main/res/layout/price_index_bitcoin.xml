<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/bitcoin_intital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="16dp"
        android:text="Initial : "
        android:textSize="20dp" />

    <EditText
        android:id="@+id/bitcoin_initial_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bitcoin_intital"
        android:hint="@string/rupee"
        android:padding="16dp" />

    <TextView
        android:id="@+id/bitcoin_profit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bitcoin_initial_amount"
        android:padding="16dp"
        android:text="Profit : "
        android:textSize="20dp"

        />

    <TextView
        android:id="@+id/bitcoin_profit_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bitcoin_profit"
        android:padding="16dp"
        android:text="Profit Percentage : "
        android:textSize="20dp"

        />


    <Button
        android:id="@+id/bitcoin_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/bitcoin_initial_amount"
        android:layout_marginEnd="31dp"
        android:text="Ok" />

</RelativeLayout>